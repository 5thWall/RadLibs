<h3>Radlib Templates</h3>
<hr>

<% @templates.each do |template| %>
    <%if template.created_at >= Time.now - 24.hours%>
    <div class="itsnew pull-right"></div>
    <%end%>
    <h5><%= template. title %></h5>

    <p>
    <%= truncate(template.template, 
      :omission => "...", :length => 240) %>
    </p>
    <br /><br />
    <%= link_to 'Show', template %> |
    <%= link_to 'Edit', edit_template_path(template) %> |
    <%= link_to 'Fill In!', new_radlib_path(template_id: template) %> |
    <%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %>
  <hr>
<% end %>
</table>
<br />
<br />
<% if user_signed_in? %>
<%= link_to '+ New Template', new_template_path %>
<% end %>