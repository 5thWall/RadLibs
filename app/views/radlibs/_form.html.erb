<%= simple_form_for(radlib) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :input_html => {:class => "span4"} %>
    <%= f.input :template, :input_html => {:class => "span8"} %>
    <%= f.input :user_id, :as => :hidden, :value => current_user %>
  </div>
  <br />

  <%= f.button :submit, "Publish Radlib", :class => "btn-inverse btn-mini"%>
<% end %>
