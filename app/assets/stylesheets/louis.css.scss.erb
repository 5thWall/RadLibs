@import url(http://fonts.googleapis.com/css?family=Trocchi|Droid+Sans);
body{
	background:url(<%= asset_path "bg2.png" %>);
	font-family: Droid Sans, helvetica;	
	font-size: 12px;
	color: #806e5e;
}
a{
	font-family: Droid Sans, helvetica;	
	color: #6c9aa8;
}
h1,h2,h3,h4,h5{
margin: 0.5% 0;
font-family: Trocchi, georgia;
color: #f16e38;	
}
h6{
margin: 0.5% 0;
font-family: Trocchi, georgia;
color: #2b241e;		
}
h7{
margin: 0.5% 0;
font-family: Droid Sans, helvetica;
color: #2b241e;		
margin: -30px 0px 10px 0px;
}
.navbar-static-top {
position: static;
width: 100%;
margin-bottom: -50px;
margin-top: -30px;
}
.navbar-inner {
min-height: 40px;
padding-left: 20px;
padding-right: 20px;
background-color: transparent;
background-image: none;
border: none;
box-shadow: none;
}
.navbar-fixed-top .navbar-inner, .navbar-static-top .navbar-inner {
box-shadow:none;
}
.navbar-fixed-top, .navbar-fixed-bottom {
position: fixed;
right: 0;
left: 0;
margin-bottom: 0;
}
.container{
	margin-top: 20px;
}
.content{
	margin-top: 20px;
	background:white;
	box-shadow: 0px 2px 1px #85a379;
	border-radius:0px;
	min-height: 700px;
}
.navbar .nav > li > a {
float: none;
padding: 20px 15px 10px;
color: white;
text-decoration: none;
text-shadow: 0 1px 0 #85a379;
font-family: Droid Sans, helvetica;	
}
.navbar .nav > li > a:hover {
color: 2b241e;
transition: color 0.5s;
-moz-transition: color 0.5s; /* Firefox 4 */
-webkit-transition: color 0.5s; /* Safari and Chrome */
-o-transition: color 0.5s; /* Opera */
}
.navbar .brand {
float: left;
display: block;
padding: 0px 20px 10px 0px;
margin-left: -20px;
font-size: 20px;
font-weight: 200;
color: #555;
text-shadow: 0 1px 0 white;
}
.rep{
	color: white!important;
	font-size:18px;
	margin-right: 0px;
	padding: 20px 0px 10px 38px!important;
	text-decoration: none;
	text-shadow: 0 1px 0 #85a379;
	font-family: Droid Sans, helvetica;	
	background:url(<%= asset_path "rep.png" %>) no-repeat;
	width:55px;
	margin-left:10px;
}
.rep:hover{
	color: #2b241e!important;
	font-size:18px;
	margin-right: 0px;
	padding: 20px 0px 10px 38px!important;
	text-decoration: none;
	text-shadow: 0 1px 0 #85a379;
	font-family: Droid Sans, helvetica;	
	background:url(<%= asset_path "rep.png" %>) no-repeat;
	width:55px;
	margin-left:10px;
}
.itsnew{
	background:url(<%= asset_path "new.png" %>) no-repeat;
